<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:layout_marginStart="10dp"
    android:id="@+id/item1"
    android:layout_marginEnd="10dp"
    android:backgroundTint="@color/dark_grey1"
    android:background="@drawable/item_rounding">

    <TextView
        android:id="@+id/item_note_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="title"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_note_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/item_note_titel"
        app:layout_constraintTop_toTopOf="@id/item_note_titel"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/light_grey1"
        android:textSize="8sp"
        android:text="00:00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_date"
        android:text="00.00"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="@id/item_clock"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/light_grey1"/>

</androidx.constraintlayout.widget.ConstraintLayout>