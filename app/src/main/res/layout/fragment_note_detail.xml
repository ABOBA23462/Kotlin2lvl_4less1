<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey2"
    tools:context=".ui.fragments.home.detail.NoteDetailFragment">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/back"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/back"
        android:text="@string/date"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextClock
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/date"
        android:text="@string/time"
        android:textColor="@color/light"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap,TextContrastCheck" />

    <TextView
        android:id="@+id/btn_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:text="@string/ready"
        android:textColor="@color/orange"
        android:textSize="15sp"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/back"
        android:layout_alignStart="@id/back"
        android:layout_marginTop="23dp"
        android:autofillHints=""
        android:backgroundTint="@color/transparent"
        android:hint="@string/name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey1"
        android:textSize="18sp"
        tools:ignore="DuplicateClickableBoundsCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/detail_title"
        android:layout_alignStart="@id/detail_title"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/transparent"
        android:hint="@string/starttowrite"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey1"
        android:textSize="15sp"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/cv_one"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/cv_two"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/cv_two"
        android:background="@drawable/rounder_item"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="16dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/cv_two"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/cream"
        android:background="@drawable/rounder_item"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="34dp" />

    <Button
        android:id="@+id/cv_third"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/cv_two"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/cv_two"
        android:background="@drawable/rounder_item"
        android:backgroundTint="@color/scarlet" />

    <View
        android:id="@+id/first_ind"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/cv_one"
        android:layout_alignStart="@+id/cv_one"
        android:layout_alignEnd="@+id/cv_one"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="40dp"
        android:visibility="invisible"
        android:background="@drawable/rounder"
        android:backgroundTint="@color/orange" />

    <View
        android:id="@+id/second_ind"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/rounder"
        android:backgroundTint="@color/orange"
        android:layout_below="@id/cv_two"
        android:layout_marginTop="-23dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/third_ind"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/cv_third"
        android:layout_alignStart="@+id/cv_third"
        android:layout_alignEnd="@+id/cv_third"
        android:layout_marginStart="40dp"
        android:visibility="invisible"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounder"
        android:backgroundTint="@color/orange" />

</RelativeLayout>